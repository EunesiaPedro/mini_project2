<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tech4dev.gettogether">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetTogether"
        tools:targetApi="31">
        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:label="Setting"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".StarredMessageActivity"
            android:exported="false"
            android:label="Starred message"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".LinkedDevicesActivity"
            android:exported="false"
            android:label="Linked devices"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewBroadcastActivity"
            android:exported="false"
            android:label="New broadcast"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewGroupActivity"
            android:exported="false"
            android:label="New group"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>